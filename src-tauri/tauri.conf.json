{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "emptytauri",
  "version": "0.1.0",
  "identifier": "com.emptytauri.app",
  "build": {
    "beforeDevCommand": "dotnet build src-dotnet/EmptyTauri.TauriPlugIn/EmptyTauri.TauriPlugIn.csproj && pnpm dev",
    "beforeBuildCommand": "dotnet publish -c Release src-dotnet/EmptyTauri.TauriPlugIn/EmptyTauri.TauriPlugIn.csproj && pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "emptytauri",
        "width": 800,
        "height": 600,
		"decorations" : false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
	"resources": {
      "./target/Debug/dotnet/*" : "dotnet/"
    }
  }
}
